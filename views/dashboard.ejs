<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="canonical" href="https://leads-track.onrender.com/leads">
    <meta name="description" content="Leads tracker"/>
    <meta name="keywords" content="Leads tracker">
    <title>Leads Track - Manage Your Leads</title>
    <!-- favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
    <link rel="manifest" href="/assets/favicon/site.webmanifest">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body class="d-flex flex-column">
    <!-- APP -->
    <div class="content container-fluid px-md-5">
      <h1 class="text-center my-5"><a href="/" class="text-white">Leads Track</a></h1>
        <!-- Table with Leads -->
        <div class="col-md-10 mt-5 mt-md-0 w-100">
          <div class="d-flex justify-content-between mb-3">
            <a href="/dashboard/addLeadForm" class="text-white btn btn-dark">Add Lead</a>
            <a href="/auth/logout" class="text-white btn btn-dark">Logout</a>
          </div>
          <div class="table-responsive-xl">
            <table class="table text-center align-middle w-100">
              <thead class="table-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Industry</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Email</th>
                  <th scope="col" class="w-25">Notes</th>
                  <th scope="col">Status</th>
                  <th scope="col">Delete</th>
                  <th scope="col">Edit</th>
                </tr>
              </thead>
              <tbody>
                <% leads.forEach((lead, index) =>{%>
                    <tr class="border lead-details <%= lead.status %>" data-id="<%= lead._id %>">
                      <th scope="row"><%= index + 1 %></th>
                      <th><%= lead.name %></th>
                      <th><%= lead.industry %></th>
                      <th><%= lead.phone %></th>
                      <th><%= lead.email %></th>
                      <th class="text-wrap"><%= lead.notes %></th>
                      <th>
                        <form action="/dashboard/updateStatus/<%= lead._id %>" method="POST" class="d-inline">
                          <input type="hidden" name="_method" value="PUT">
                          <select name="status" class="form-select" onchange="this.form.submit()">
                            <option value="new" <%= lead.status === 'new' ? 'selected' : '' %>>New</option>
                            <option value="contacted" <%= lead.status === 'contacted' ? 'selected' : '' %>>Contacted</option>
                            <option value="pending" <%= lead.status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="closed" <%= lead.status === 'closed' ? 'selected' : '' %>>Closed</option>
                          </select>
                        </form>
                      </th>
                      <th>
                        <form action="/dashboard/deleteLead/<%= lead._id %>" method="POST" class="d-inline">
                          <input type="hidden" name="_method" value="DELETE">
                          <button type="submit" class="btn btn-light">
                            <i class="bi bi-trash"></i>
                          </button>
                        </form>
                      </th>
                      <th>
                        <a href="/dashboard/editLeadForm/<%= lead._id %>"><i class="bi bi-pencil-square btn btn-light"></i></a>
                      </th>
                    </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
    <footer class="bg-dark text-white py-4 text-center">
      <div class="d-md-flex justify-content-around align-items-center">
        <p class="mb-0 col">Â© 2024 Leads Track. All rights reserved.</p>
			  <!-- social-links -->
        <div class="col d-flex justify-content-center mt-md-0 mt-3">
          <a class="btn-social" href="https://twitter.com/khoumaDev"><i class="bi bi-twitter-x"></i></a>
          <a class="btn-social" href="https://www.linkedin.com/in/serigne-khouma/"><i class="bi bi-linkedin"></i></a>
          <a class="btn-social" href="https://github.com/227Faddi/leads-track"><i class="bi bi-github"></i></a>
          <a class="btn-social" href="https://faliloukhouma.com/"><i class="bi bi-person-fill"></i></a>
        </div>
      </div>
    </footer>
    <script src='js/main.js'></script>
  </body>
</html>
